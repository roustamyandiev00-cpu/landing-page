{
  "rules": {
    "users": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid"
      }
    },
    "offertes": {
      ".indexOn": ["userId", "createdAt"],
      "$offerte": {
        ".read": "data.child('userId').val() === auth.uid",
        ".write": "auth != null && (data.child('userId').val() === auth.uid || newData.child('userId').val() === auth.uid)"
      }
    },
    "facturen": {

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Clients collection
    match /clients/{docId} {
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
